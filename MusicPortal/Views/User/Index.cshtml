@model IEnumerable<MusicPortal.Models.DataBase.Music>

@{
    ViewData["Title"] = "User Panel";
}

<div class="text-center">
    <h2>User Panel</h2>
</div>
<hr>
<button class="addconf" data-toggle="modal" data-target="#addMusicModal">Add Music</button> 

 <table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th style="text-align:center">Actions</th>
        </tr>
    </thead>
    <tbody id="musicTableBody">
        @foreach (var music in Model)
        {
            <tr>
                <td>@music.Title</td>
                <td>@music.Artist</td>
                <td>@music.Genre?.Name</td>
                <td style="text-align:center">
                    <button type="button" class="btn btn-warning blo" onclick="editMusicModal('@Url.Action("EditMusic", "User")', @music.Id, '@music.Title', '@music.Artist', '@music.GenreId')">Edit</button>
                    <button type="button" class="btn btn-danger del" onclick="deleteMusic('@Url.Action("DeleteMusic", "User")', @music.Id)">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

@Html.Partial("AddMusicModal")
@Html.Partial("EditMusicModal") 

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}
