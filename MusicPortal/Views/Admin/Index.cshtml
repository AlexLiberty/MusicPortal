@model IEnumerable<MusicPortal.Models.DataBase.User>

@{
    ViewData["Title"] = "Admin Panel";
}

<div class="text-center">
    <h2>Admin Panel</h2>
</div>

<ul class="nav nav-tabs" id="adminTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="confirmation-tab" data-toggle="tab" href="#confirmation" role="tab" aria-controls="confirmation" aria-selected="true">User Confirmation</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="management-tab" data-toggle="tab" href="#management" role="tab" aria-controls="management" aria-selected="false">User Management</a>
    </li>
</ul>

<div class="tab-content" id="adminTabContent">
    <div class="tab-pane fade show active" id="confirmation" role="tabpanel" aria-labelledby="confirmation-tab">
        @await Html.PartialAsync("UserConfirmation", Model.Where(u => !u.IsConfirmed))
    </div>
    <div class="tab-pane fade" id="management" role="tabpanel" aria-labelledby="management-tab">
        @await Html.PartialAsync("UserManagement", Model.Where(u => u.IsConfirmed && !u.IsAdmin))
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
}
